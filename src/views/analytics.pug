  script.
    tailwind.config = { darkMode: 'class' };
  style.
    .toggle-switch {
    transition: background-color 0.3s;
    }
    .toggle-switch .dot {
    transition: transform 0.3s;
    }
    .toggle-switch input:checked ~ .bg {
    background-color: #4f46e5;
    }
    .toggle-switch input:checked ~ .bg .dot {
    transform: translateX(20px);
    }
