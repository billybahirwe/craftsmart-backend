doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title User Login - CraftSmart
    link(rel='stylesheet', href='/css/user-login.css')
    script(src='https://cdn.tailwindcss.com')
  
  body(class='bg-gray-100 min-h-screen flex items-center justify-center')
    .login-container(class='bg-white p-8 rounded shadow-md w-full max-w-md')
      h2(class='text-2xl font-bold mb-6 text-center text-blue-600') User Login

      form(action='/login', method='POST')
        .mb-4
          label(for='username' class='block mb-1 font-semibold') Username
          input#username(type='text', name='username', required class='w-full border px-3 py-2 rounded')

        .mb-4
          label(for='password' class='block mb-1 font-semibold') Password
          input#password(type='password', name='password', required class='w-full border px-3 py-2 rounded')

        .mb-4
          label(for='role' class='block mb-1 font-semibold') Login as:
          select#role(name='role', required class='w-full border px-3 py-2 rounded')
            option(value='') -- Select Role --
            option(value='employer') Employer
            option(value='craftsman') Craftsman

        button(type='submit' class='w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700 transition') Login

      if error
        p(class='text-red-500 mt-4 text-center') #{error}

      .mt-6.text-center
        a(href='/' class='text-blue-600 hover:underline') ‚Üê Back to Home
