doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title CraftSmart - Reports
    script(src='https://cdn.tailwindcss.com')
    script(src='https://unpkg.com/feather-icons')
    style.
      body {
        font-family: 'Inter', sans-serif;
      }
  body#body.bg-white.text-gray-800.transition-colors.duration-300
    .min-h-screen.flex
      // Sidebar
      aside#sidebar.w-64.bg-white.p-4.border-r.border-gray-200.shadow-sm.overflow-y-auto
        .text-2xl.font-bold.text-blue-600.mb-6 CraftSmart
        nav.space-y-2.text-sm
          a(href='/dashboard' class='flex items-center px-3 py-2 rounded bg-blue-100 font-semibold text-blue-600')
            i(data-feather='home' class='w-4 h-4 mr-2')
            | Home
          a(href='/dashboard/monitor' class='flex items-center px-3 py-2 rounded hover:bg-blue-100')
            i(data-feather='eye' class='w-4 h-4 mr-2')
            | Job Monitor
          a(href='/dashboard/projects' class='flex items-center px-3 py-2 rounded hover:bg-blue-100')
            i(data-feather='folder' class='w-4 h-4 mr-2')
            | Projects
          a(href='/dashboard/messages' class='flex items-center px-3 py-2 rounded hover:bg-blue-100')
            i(data-feather='message-circle' class='w-4 h-4 mr-2')
            | Messages
          a(href='/dashboard/reports' class='flex items-center px-3 py-2 rounded hover:bg-blue-100')
            i(data-feather='file-text' class='w-4 h-4 mr-2')
            | Reports
          a(href='/dashboard/blacklist' class='flex items-center px-3 py-2 rounded hover:bg-blue-100')
            i(data-feather='user-x' class='w-4 h-4 mr-2')
            | Black list
          a(href='/dashboard/analytics' class='flex items-center px-3 py-2 rounded hover:bg-blue-100')
            i(data-feather='bar-chart-2' class='w-4 h-4 mr-2')
            | Analytics
          a(href='/dashboard/help' class='flex items-center px-3 py-2 rounded hover:bg-blue-100')
            i(data-feather='help-circle' class='w-4 h-4 mr-2')
            | Help center
          a(href='/dashboard/contact' class='flex items-center px-3 py-2 rounded hover:bg-blue-100')
            i(data-feather='mail' class='w-4 h-4 mr-2')
            | Contact us
          a(href='/logout' class='flex items-center px-3 py-2 text-red-600 rounded hover:bg-red-100')
            i(data-feather='log-out' class='w-4 h-4 mr-2')
            | Log Out

      // Main Content
      main#main.flex-1.p-6.space-y-6
        // Top Bar
        #topbar.bg-white.p-4.rounded.shadow.flex.justify-between.items-center
          .flex-1.flex.justify-center
            input.w-full.max-w-md.px-4.py-2.border.rounded.shadow-sm.bg-gray-50(type='text', placeholder='Search...')
          .flex.items-center.space-x-4
            label.toggle-switch.relative.flex.items-center.cursor-pointer
              input#darkToggle.sr-only(type='checkbox', onchange='toggleDarkMode(this)')
              .bg.w-11.h-6.bg-gray-300.rounded-full.relative
                .dot.absolute.left-1.top-1.bg-white.w-4.h-4.rounded-full
            i.w-5.h-5.text-gray-600(data-feather='bell')
            .w-8.h-8.bg-gray-300.rounded-full

        // Calendar and PDF Button
        .flex.justify-end.items-center.gap-4
          .flex.items-center.gap-2.text-gray-700
            i(data-feather='calendar')
            span Wednesday, 17 May 2021
          button(class='flex items-center gap-2 bg-green-600 text-white px-4 py-2 rounded shadow hover:bg-green-700')

            i(data-feather='download')
            | Export to PDF

        // User Reports Table
        .overflow-auto.bg-white.shadow.rounded
          table.min-w-full.text-sm.text-left.border
            thead.bg-white-600.text-black
              tr
                th.px-4.py-2 Users
                th.px-4.py-2 Jobs
                th.px-4.py-2 Messages
                th.px-4.py-2 Black List
                th.px-4.py-2 Login Activity
                th.px-4.py-2 Financial
        table.min-w-full.text-sm.text-left.border
          thead.bg-white-600.text-black
            tr
              th.px-4.py-2 Project
              th.px-4.py-2 Start Date
              th.px-4.py-2 Craftsman
              th.px-4.py-2 Employer
              th.px-4.py-2 Status
              th.px-4.py-2 Reports
              th.px-4.py-2 Actions
          tbody.text-gray-700
            tr.border-t
              td.px-4.py-2 Fixing the Kitchen Sink
              td.px-4.py-2 Mon 9 Aug, 10:49 AM
              td.px-4.py-2 Karin
              td.px-4.py-2 William
              td.px-4.py-2.text-yellow-600 Pending
              td.px-4.py-2 karin@gmail.com
              td.px-4.py-2.flex.gap-2
                button.bg-black.text-white.px-2.py-1.rounded Edit
                button.bg-red-600.text-white.px-2.py-1.rounded Delete
            tr.border-t
              td.px-4.py-2 Wall Painting
              td.px-4.py-2 Mon 9 Aug, 10:49 AM
              td.px-4.py-2 Shabrina
              td.px-4.py-2 Shabani
              td.px-4.py-2.text-green-600 Completed
              td.px-4.py-2 shabrina@gmail.com
              td.px-4.py-2.flex.gap-2
                button.bg-black.text-white.px-2.py-1.rounded Edit
                button.bg-red-600.text-white.px-2.py-1.rounded Delete
            tr.border-t
              td.px-4.py-2 Work Work
              td.px-4.py-2 Mon 9 Aug, 10:49 AM
              td.px-4.py-2 Joel
              td.px-4.py-2 Matt
              td.px-4.py-2.text-yellow-600 On Hold
              td.px-4.py-2 joel@gmail.com
              td.px-4.py-2.flex.gap-2
                button.bg-black.text-white.px-2.py-1.rounded Edit
                button.bg-red-600.text-white.px-2.py-1.rounded Delete
            tr.border-t
              td.px-4.py-2 Work Work
              td.px-4.py-2 Mon 9 Aug, 10:49 AM
              td.px-4.py-2 Joel
              td.px-4.py-2 Regern
              td.px-4.py-2.text-red-600 Not Started
              td.px-4.py-2 joel@gmail.com
              td.px-4.py-2.flex.gap-2
                button.bg-black.text-white.px-2.py-1.rounded Edit
                button.bg-red-600.text-white.px-2.py-1.rounded Delete

        // Footer
        .flex.justify-between.items-center.mt-4.text-sm.text-gray-600
          span Go to page
          span 15 | 20 per page
          span Total: 4 entries

    script.
      feather.replace();
      function toggleDarkMode(checkbox) {
        const isDark = checkbox.checked;
        const html = document.documentElement;
        const body = document.getElementById('body');
        const sidebar = document.getElementById('sidebar');
        const topbar = document.getElementById('topbar');
        const main = document.getElementById('main');
        if (isDark) {
          html.classList.add('dark');
          body.className = 'bg-gray-900 text-white transition-colors duration-300';
          sidebar.className = 'w-64 bg-gray-800 p-4 border-r border-gray-700 shadow-sm overflow-y-auto';
          topbar.className = 'bg-gray-800 p-4 rounded shadow flex justify-between items-center';
          main.className = 'flex-1 p-6 space-y-6';
        } else {
          html.classList.remove('dark');
          body.className = 'bg-white text-gray-800 transition-colors duration-300';
          sidebar.className = 'w-64 bg-white p-4 border-r border-gray-200 shadow-sm overflow-y-auto';
          topbar.className = 'bg-white p-4 rounded shadow flex justify-between items-center';
          main.className = 'flex-1 p-6 space-y-6';
        }
      }
