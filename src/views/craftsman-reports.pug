    .toggle-switch {
    width: 50px;
    height: 24px;
    background: #ccc;
    border-radius: 9999px;
    position: relative;
    cursor: pointer;
    }
    .toggle-switch::before {
    content: '';
    width: 20px;
    height: 20px;
    background: white;
    border-radius: 50%;
    position: absolute;
    top: 2px;
    left: 2px;
    transition: transform 0.3s ease;
    }
    input:checked + .toggle-switch::before {
    transform: translateX(26px);
    }
    input:checked + .toggle-switch {
    background: #4F46E5;
    }
